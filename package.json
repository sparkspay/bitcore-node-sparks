{
  "name": "bitcore-node-sparks",
  "description": "Full node with extended capabilities using Sparkscore and Sparks Core (sparksd)",
  "author": "BitPay <dev@bitpay.com>",
  "version": "5.0.3",
  "main": "./index.js",
  "repository": "git://github.com/sparkspay/sparkscore-node.git",
  "homepage": "https://github.com/sparkspay/sparkscore-node",
  "bugs": {
    "url": "https://github.com/sparkspay/sparkscore-node/issues"
  },
  "contributors": [
    {
      "name": "z3r0 m0r4k",
      "email": "m0r4k@outlook.com"
    }
  ],
  "bin": {
    "sparkscore-node": "./bin/sparkscore-node"
  },
  "scripts": {
    "test": "mocha -R spec --recursive",
    "regtest": "./regtest/regtest",
    "jshint": "jshint --reporter=node_modules/jshint-stylish ./lib",
    "coverage": "istanbul cover _mocha -- --recursive",
    "coveralls": "./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- --recursive -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "mocha": "./node_modules/.bin/mocha",
    "check-package": "npm run check-package:name && npm run check-package:version",
    "check-package:name": "test $(jq -r .name package.json) = $(jq -r .name package-lock.json)",
    "check-package:version": "test $(jq -r .version package.json) = $(jq -r .version package-lock.json)",
    "sparksd_test": "./node_modules/.bin/mocha test/services/sparksd.unit.js",
    "install-api": "npm install git+https://github.com/sparkspay/insight-api-sparks.git#master",
    "install-ui": "npm install git+https://github.com/sparkspay/insight-ui-sparks.git#master"
  },
  "tags": [
    "sparks",
    "sparksd"
  ],
  "dependencies": {
    "async": "^2.6.1",
    "bitcore-lib-sparks": "git+https://github.com/sparkspay/bitcore-lib-sparks.git#master",
    "bitcored-rpc-sparks": "git+https://github.com/sparkspay/bitcored-rpc-sparks.git#1.2.1",
    "body-parser": "^1.18.3",
    "colors": "^1.3.3",
    "commander": "^2.19.0",
    "errno": "^0.1.7",
    "express": "^4.16.4",
    "liftoff": "^2.5.0",
    "lru-cache": "^5.1.1",
    "mkdirp": "0.5.1",
    "path-is-absolute": "^2.0.0",
    "semver": "^5.6.0",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "zeromq": "^5.1.0"
  },
  "optionalDependencies": {
    "bufferutil": "~4.0.1",
    "utf-8-validate": "~5.0.2"
  },
  "devDependencies": {
    "bitcore-p2p-sparks": "git+https://github.com/sparkspay/bitcore-p2p-sparks.git#master",
    "benchmark": "2.1.4",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "istanbul": "^0.4.5",
    "jshint": "^2.10.1",
    "jshint-stylish": "^2.2.1",
    "mocha": "^5.2.0",
    "proxyquire": "^2.1.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.3"
  },
  "license": "MIT"
}
